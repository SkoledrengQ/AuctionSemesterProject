@model IEnumerable<WebApp.Models.AuctionDetailsViewModel>

@{
    ViewData["Title"] = "Shelf Treasures!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        main {
            max-width: 900px;
            margin: 20px auto;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #006d5b;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        h2 {
            color: #333;
            border-bottom: 2px solid #006d5b;
        }
    </style>
</head>
<body>
    <main>
        <h2>@ViewData["Title"]</h2>

        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Genre</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="navigateToDetails(@item.AuctionID)">
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td>@item.Genre</td>
                            <td>@item.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No auctions are currently available. Please check back later!</p>
        }
    </main>

    <script>
        function navigateToDetails(auctionId) {
            window.location.href = `/Home/AuctionDetails/${auctionId}`;
        }
    </script>
</body>
</html>
