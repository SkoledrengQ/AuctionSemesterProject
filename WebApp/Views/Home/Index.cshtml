@{
    ViewData["Title"] = "Shelf Treasures!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="jumbotron text-center mt-5">
            <!-- Logo Section -->
            <img src="/img/logo.png" alt="Shelf Treasures Logo" style="max-width: 400px; height: auto; margin-bottom: 20px;" />

            <!-- Welcome Text -->
            <p class="lead">Where every shelf holds a story worth bidding for!</p>
            <hr class="my-4">
            <p>Start exploring our items below or log in to place a bid!</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "AuctionItem")" role="button">Browse Auction Items</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
