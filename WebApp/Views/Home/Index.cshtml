@{
    ViewData["Title"] = "Shelf Treasures!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #eafaf1;
            color: #333333;
            margin: 0;
            padding: 0;
        }

        main {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        h2 {
            color: #006d5b;
            border-bottom: 2px solid #33b29e;
            display: inline-block;
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            table th, table td {
                text-align: left;
                padding: 12px;
                border: 1px solid #dddddd;
            }

            table th {
                background-color: #006d5b;
                color: #ffffff;
                font-weight: bold;
            }

            table tr {
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                table tr:hover {
                    background-color: #d4f0e4;
                }
    </style>
    <script>
        function navigateToAuction(id) {
            window.location.href = `/Home/AuctionDetails/${id}`;
        }
    </script>
</head>
<body>
    <main>
        <h2>Available Auction Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="navigateToAuction(@item.ItemID)">
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Genre</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>
