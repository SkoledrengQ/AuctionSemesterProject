@model AuctionSemesterProject.AuctionModels.Member

@{
    ViewData["Title"] = "My Profile";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Phone No:</strong> @Model.PhoneNo</p>

            <!-- Check if Birthday is not null before using ToShortDateString -->
            <p class="card-text"><strong>Birthday:</strong> @(Model.Birthday?.ToShortDateString() ?? "N/A")</p>

            <!-- If you want to display the Address details as well -->
            <p class="card-text"><strong>Address:</strong> @Model.AddressID_FK</p> <!-- You can display more address details if available -->

            <a href="@Url.Action("Edit", "Member", new { id = Model.MemberID })" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>

    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary mt-3">Logout</a>
}
else
{
    <p>No member data found. Please log in again.</p>
}
